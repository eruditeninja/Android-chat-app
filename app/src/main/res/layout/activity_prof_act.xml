<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prof_act">

    <ImageView
        android:id="@+id/Pro_Act_ImageView"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pro_act_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="252dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pro_act_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pro_act_Name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="195dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Pro_act_req_btn"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:background="@color/colorPrimaryDark"
        android:text="Send Friend Request"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/profile_decline_btn"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Pro_act_req_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:background="#4d4dff"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="@color/colorAccent" />
</RelativeLayout>