<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f04e36"
    tools:context=".startactivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:text="Welcome to ChatIT"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="141dp"
        android:background="	#41b627"
        android:text="Need a new account?"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/start_login_btn"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/start_reg_btn"


        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="223dp"
        android:background="#0099ff"
        android:text="Existing User?"
        android:textColor="@color/colorAccent" />
</RelativeLayout>